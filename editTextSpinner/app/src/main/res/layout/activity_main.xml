<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-21dp"
    tools:layout_editor_absoluteY="3dp">

    <EditText
        android:id="@+id/editNum1"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Numero 1"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNum2"
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Numero 2"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@+id/editNum1"
        app:layout_constraintTop_toBottomOf="@+id/editNum1" />

    <Spinner
        android:id="@+id/spinnerOperacao"
        android:layout_width="255dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/editNum2"
        app:layout_constraintTop_toBottomOf="@+id/editNum2" />

    <Button
        android:id="@+id/buttonCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="28dp"
        android:text="Calcular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerOperacao" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="Resultado"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonCalcular"
        app:layout_constraintStart_toEndOf="@+id/buttonCalcular" />
</androidx.constraintlayout.widget.ConstraintLayout>